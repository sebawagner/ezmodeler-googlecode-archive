                    </view>
                    
                    <view name="option2">
                        
                        <handler name="onclick">
                            //if ($debug) Debug.write("option2");
                        </handler>
                        
                         <handler name="onmouseover">
                            this.setAttribute('bgcolor',canvas.baseMouseOvercolorizer);
                        </handler>
                        <handler name="onmouseout">
                            this.setAttribute('bgcolor',0xFFFFFF);
                        </handler>
                        
