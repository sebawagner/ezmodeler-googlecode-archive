                             labelid="1239" /> 
                
                <view name="_modelTypes" y="40" layout="axis:y;spacing:2">
                    
                    <view name="option1">
                        
                        <handler name="onclick">
                            parent.parent.parent.parent.parent.modelStyle = "topdown";
                            parent.parent.parent.parent.parent.saveAndDoNextByModelTypeChoice();
