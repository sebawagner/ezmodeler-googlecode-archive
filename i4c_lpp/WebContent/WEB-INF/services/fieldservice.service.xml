<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:lang="http://www.springframework.org/schema/lang"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.0.xsd">
    
    <bean id="languageservice.service" parent="txProxyTemplate">
        <property name="target" ref="txLanguageservice.service" />
    </bean>
    
    <!-- Class for Methods which can be invoked by the client -->
    <bean id="txLanguageservice.service" 
        class="org.i4change.app.remote.LanguageService">
        <property name="sessionmanagement" ref="i4change.Sessionmanagement" />
        <property name="userDaoImpl" ref="i4change.UserDaoImpl" />  
        <property name="configurationmanagement" ref="i4change.Configurationmanagement" />
        <property name="fieldmanagment" ref="i4change.Fieldmanagment" />
        <property name="languagemanagement" ref="i4change.Languagemanagement" />
    </bean>
    
    <bean id="i4change.Fieldmanagment"
        class="org.i4change.app.data.basic.Fieldmanagment">
    	<property name="sessionFactory" ref="theSessionFactory"/>
    </bean>
    
    <bean id="i4change.LanguageImport"
        class="org.i4change.app.xmlimport.LanguageImport">
        <property name="languagemanagement" ref="i4change.Languagemanagement" />
        <property name="fieldmanagment" ref="i4change.Fieldmanagment" />
    </bean>
    
    <bean id="i4change.Languagemanagement"
        class="org.i4change.app.data.basic.Languagemanagement">
        <property name="sessionFactory" ref="theSessionFactory"/>
    </bean>
    
    
    
</beans>
